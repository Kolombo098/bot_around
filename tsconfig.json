{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "outDir": "./dist",
        "typeRoots": [
            "./types",
            "./node_modules/@types"
        ]
    },
    "include": [
        "src/**/*.ts",    // Путь ко всем .ts файлам в src
        "types/**/*.d.ts" ],// Путь ко всем .d.ts файлам в src/types    ,
    "exclude": [
        "node_modules"
    ]
}